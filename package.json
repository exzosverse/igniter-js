    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prepublishOnly": "bun run build",
    "clean": "rm -rf dist",
    "release": "npm publish --access public"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "typescript": ">=5.0.0"
  },
  "devDependencies": {
    "@igniter-js/eslint-config": "^0.1.0",
    "@types/bun": "latest",
    "@types/lodash": "^4.17.15",
    "@types/react": "^19.0.10",
    "tsup": "^8.4.0",
    "typescript": "^5.0.0",
    "vitest": "^3.0.7"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "lodash": "^4.17.21",
    "rou3": "^0.5.1",
    "uncrypto": "^0.1.3"
  },
  "publishConfig": {
    "access": "public"
  }
