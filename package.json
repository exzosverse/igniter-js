{
  "name": "@igniter-js/core",
  "version": "0.1.1",
  "description": "A modern, type-safe, and flexible HTTP framework for building scalable APIs with TypeScript",
  "author": "Felipe Barcelos <felipebarcelospro@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felipebarcelospro/igniter.git"
  },
  "bugs": {
    "url": "https://github.com/felipebarcelospro/igniter/issues"
  },
  "homepage": "https://felipebarcelospro.github.io/igniter",
  "keywords": [
    "typescript",
    "api",
    "framework",
    "http",
    "router",
    "nextjs",
    "express",
    "fastify",
    "type-safe"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
