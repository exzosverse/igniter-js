{
  "name": "@igniter-js/core",
  "version": "0.1.18",
  "description": "A modern, type-safe, and flexible HTTP framework for building scalable APIs with TypeScript",
  "author": "Felipe Barcelos <felipebarcelospro@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felipebarcelospro/igniter-js.git"
  },
  "bugs": {
    "url": "https://github.com/felipebarcelospro/igniter-js/issues"
  },
  "homepage": "https://felipebarcelospro.github.io/igniter-js",
  "keywords": [
    "typescript",
    "api",
    "framework",
    "http",
    "router",
    "nextjs",
    "express",
    "fastify",
    "type-safe",
    "middleware",
    "server"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.js"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "import": "./dist/adapters/index.mjs",
      "require": "./dist/adapters/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsup --config tsup.config.ts --watch",
    "build": "tsup --config tsup.config.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prepublishOnly": "bun run build",
    "clean": "rm -rf dist",
    "release": "npm publish --access public"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": ">=5.0.0",
    "ioredis": "",
    "bullmq": "",
    "next": ">=13.0.0",
    "webpack": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "@vercel/mcp-adapter": {
      "optional": true
    },
    "@modelcontextprotocol/sdk": {
      "optional": true
    },
    "ioredis": {
      "optional": true
    },
    "bullmq": {
      "optional": true
    },
    "next": {
      "optional": true
    },
    "webpack": {
      "optional": true
    }
  },
  "devDependencies": {
    "@igniter-js/eslint-config": "^0.1.0",
    "@types/bun": "latest",
    "@types/ioredis": "^5.0.0",
    "@types/lodash": "^4.17.15",
    "@types/next": "^9.0.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/webpack": "^5.28.5",
    "@types/node": "^22.9.0",
    "eslint": "^8.57.0",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4",
    "chokidar": "^3.6.0"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "glob": "^11.0.0",
    "lodash": "^4.17.21",
    "rou3": "^0.5.1",
    "uncrypto": "^0.1.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
